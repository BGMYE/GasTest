<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sxgpra.mapper.GasStudentMapper">
    
    <resultMap type="GasStudent" id="GasStudentResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="age"    column="age"    />
        <result property="mclass"    column="mclass"    />
    </resultMap>

    <sql id="selectGasStudentVo">
        select id, name, age, mclass from gas_student
    </sql>

    <select id="selectGasStudentList" parameterType="GasStudent" resultMap="GasStudentResult">
        <include refid="selectGasStudentVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="age != null  and age != ''"> and age = #{age}</if>
            <if test="mclass != null  and mclass != ''"> and mclass = #{mclass}</if>
        </where>
    </select>
    
    <select id="selectGasStudentById" parameterType="String" resultMap="GasStudentResult">
        <include refid="selectGasStudentVo"/>
        where id = #{id}
    </select>

    <insert id="insertGasStudent" parameterType="GasStudent">
        insert into gas_student
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="age != null">age,</if>
            <if test="mclass != null">mclass,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="age != null">#{age},</if>
            <if test="mclass != null">#{mclass},</if>
         </trim>
    </insert>

    <update id="updateGasStudent" parameterType="GasStudent">
        update gas_student
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="age != null">age = #{age},</if>
            <if test="mclass != null">mclass = #{mclass},</if>
        </trim>
        where id = #{id}
    </update>

        <!-- 物理删除：不存在del_flag字段，使用物理删除 -->
        <delete id="deleteGasStudentById" parameterType="String">
            delete from gas_student where id = #{id}
        </delete>

        <delete id="deleteGasStudentByIds" parameterType="String">
            delete from gas_student where id in
            <foreach item="id" collection="array" open="(" separator="," close=")">
                #{id}
            </foreach>
        </delete>
</mapper>